<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blackey.artisan.component.mapper.OrderMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.blackey.artisan.component.domain.Order" id="orderMap">
        <result property="id" column="id"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdDate" column="created_date"/>
        <result property="updateBy" column="update_by"/>
        <result property="updatedDate" column="updated_date"/>
        <result property="orderNo" column="order_no"/>
        <result property="userId" column="user_id"/>
        <result property="projectId" column="project_id"/>
    </resultMap>

    <select id="getMainPageOrderList" resultType="com.blackey.artisan.dto.bo.OrderInfoBo">
		SELECT
			o.id,
					  o.created_date,
					  o.price,
					  o.order_no,
					  o.order_status,
					  o.project_id,
					  o.service_no,
					  p.`name` as project_name,
					  p.pic_url,
					  p.proDesc,
					  s.address,
					  s.`name` as service_user_name,
					  s.remark,
					  s.telephone,
					  s.service_time
				  FROM
					  order_info o,
					  project p,
					  service_info s
				  WHERE
					  o.service_no = s.id
					  AND p.id = o.project_id
		<if test="openId != '' and openId != null">
			and	o.open_id = #{openId}
		</if>
		<if test="orderStatus != '' and orderStatus != null">
			and	o.order_status = #{orderStatus}
		</if>
	</select>

</mapper>